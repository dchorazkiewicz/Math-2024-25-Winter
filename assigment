        "import numpy as np\n",
        "\n",
        "# Matris oluşturma\n",
        "A = np.array([[1, 2], [3, 4]])\n",
        "B = np.array([[5, 6], [7, 8]])\n",
        "\n",
        "# Matris toplama\n",
        "C = A + B\n",
        "print(\"Matris Toplama (A + B):\")\n",
        "print(C)\n",
        "\n",
        "# Matris çıkarma\n",
        "D = A - B\n",
        "print(\"\\nMatris Çıkarma (A - B):\")\n",
        "print(D)\n",
        "\n",
        "# Matris çarpma (eleman bazında çarpma)\n",
        "E = A * B\n",
        "print(\"\\nMatris Çarpma (eleman bazında A * B):\")\n",
        "print(E)\n",
        "\n",
        "# Matris çarpma (dot çarpma)\n",
        "F = np.dot(A, B)\n",
        "print(\"\\nMatris Çarpma (Dot Çarpma A * B):\")\n",
        "print(F)\n",
        "\n",
        "# Matrisin transpozu\n",
        "G = A.T\n",
        "print(\"\\nMatrisin Transpozu (A^T):\")\n",
        "print(G)\n",
        "\n",
        "# Matrisin tersini alma\n",
        "H = np.linalg.inv(A)\n",
        "print(\"\\nMatrisin Tersi (A^-1):\")\n",
        "print(H)\n",
        "\n",
        "# Matrisin determinantını hesaplama\n",
        "det_A = np.linalg.det(A)\n",
        "print(\"\\nMatrisin Determinantı (det(A)):\")\n",
        "print(det_A)\n",
        "\n"
      ],
